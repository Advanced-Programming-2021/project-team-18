<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.menu.profilemenu.ProfileMenuView"
      spacing="10" alignment="CENTER">
    <GridPane hgap="20" vgap="5" alignment="CENTER">
        <Label GridPane.rowIndex="0" GridPane.columnIndex="0">Old Password</Label>
        <PasswordField GridPane.rowIndex="0" GridPane.columnIndex="1" fx:id="oldPassword"/>
        <Label GridPane.rowIndex="1" GridPane.columnIndex="0">New Password</Label>
        <PasswordField GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="newPassword"/>
    </GridPane>
    <HBox alignment="CENTER" spacing="15">
        <Button onAction="#changePassword">Change Password</Button>
        <Button onAction="#backToProfileMenu">Back</Button>
    </HBox>
    <Label fx:id="response"/>
    <stylesheets>
        <URL value="@../CSS/styles.css"/>
    </stylesheets>
</VBox>

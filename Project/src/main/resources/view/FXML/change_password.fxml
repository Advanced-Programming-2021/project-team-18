<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.menu.profilemenu.ProfileMenuView">
    <GridPane alignment="CENTER" hgap="20" vgap="5">
        <Label GridPane.columnIndex="0" GridPane.rowIndex="0">Old Password</Label>
        <PasswordField fx:id="oldPassword" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label GridPane.columnIndex="0" GridPane.rowIndex="1">New Password</Label>
        <PasswordField fx:id="newPassword" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
    <HBox alignment="CENTER" spacing="15">
        <Button onAction="#changePassword">Change Password</Button>
        <Button onAction="#backToProfileMenu" prefHeight="44.0" prefWidth="124.0">Back</Button>
    </HBox>
    <Label fx:id="response" />
    <stylesheets>
        <URL value="@../CSS/styles.css" />
    </stylesheets>
</VBox>

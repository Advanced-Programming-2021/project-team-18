<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.menu.profilemenu.ProfileMenuView">
    <HBox alignment="CENTER" spacing="20">
        <Label>Your nickname:</Label>
        <TextField fx:id="nicknameInput" />
    </HBox>
    <HBox alignment="CENTER" spacing="15">
        <Button onAction="#changeNickname">Change Nickname</Button>
        <Button onAction="#backToProfileMenu" prefHeight="44.0" prefWidth="126.0">Back</Button>
    </HBox>
    <stylesheets>
        <URL value="@../CSS/styles.css" />
    </stylesheets>
</VBox>

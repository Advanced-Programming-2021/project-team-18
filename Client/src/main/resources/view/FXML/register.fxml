<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane prefHeight="600.0" prefWidth="860.0" styleClass="registerPane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" fx:controller="view.menu.loginmenu.RegisterView">
    <stylesheets>
        <URL value="@../CSS/styles.css"/>
    </stylesheets>
    <bottom>
        <VBox alignment="CENTER" spacing="30" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER" spacing="20">
                <Label styleClass="field-label" text="Username">
                </Label>
                <TextField fx:id="usernameInput" prefHeight="38.0" prefWidth="175.0"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <Label styleClass="field-label" text="Nickname">
                </Label>
                <TextField fx:id="nicknameInput" prefHeight="34.0" prefWidth="174.0"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <Label text="Password" styleClass="field-label"/>
                <PasswordField fx:id="passwordInput" prefHeight="36.0" prefWidth="182.0"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button alignment="CENTER" onAction="#register" prefHeight="53.0" prefWidth="160.0">Register</Button>
                <Button alignment="CENTER" onAction="#backToWelcome" prefHeight="53" prefWidth="160">Back</Button>
            </HBox>
            <Label fx:id="response" alignment="CENTER"/>
        </VBox>
    </bottom>

</BorderPane>

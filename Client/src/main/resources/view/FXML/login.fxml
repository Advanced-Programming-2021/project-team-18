<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="860.0" styleClass="loginPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.menu.loginmenu.LoginView">
    <stylesheets>
        <URL value="@../CSS/styles.css"/>
    </stylesheets>
    <center>
        <VBox alignment="CENTER">
            <HBox alignment="CENTER" minHeight="100.0" prefHeight="100.0" prefWidth="200.0" style="-fx-spacing: 20;">
                <Label styleClass="field-label" text="Username" textAlignment="CENTER"/>
                <TextField fx:id="usernameField" alignment="CENTER"/>
            </HBox>
            <HBox alignment="CENTER" minWidth="200.0" prefHeight="100.0" prefWidth="200.0" style="-fx-spacing: 20;">
                <Label styleClass="field-label" text="Password">
                </Label>
                <PasswordField fx:id="passwordField" alignment="CENTER" minWidth="100.0"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button mnemonicParsing="false" onAction="#login" prefHeight="54.0" prefWidth="147.0" text="Login">
                    <font>
                        <Font size="33.0"/>
                    </font>
                </Button>
                <Button onAction="#back" prefHeight="54.0" prefWidth="147.0" text="Back">
                    <font>
                        <Font size="33.0"/>
                    </font>
                </Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>
